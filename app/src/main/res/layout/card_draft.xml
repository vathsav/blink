<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/layout_card_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_border">

        <TextView
            android:id="@+id/text_view_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            android:textColor="@color/color_white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text_view_card_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:textAlignment="textEnd"
            android:textColor="@color/color_white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_buttons_border"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/image_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="#424242" />

        <ImageButton
            android:id="@+id/image_button_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="#424242" />

    </LinearLayout>
</LinearLayout>