<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    android:background="@drawable/card_border"
    android:padding="0dp">

    <TextView
        android:id="@+id/text_view_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:text="Title"
        android:textColor="#E0E0E0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_card_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Time"
        android:textColor="#E0E0E0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/card_buttons_border"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/image_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="#424242" />

        <ImageButton
            android:id="@+id/image_button_favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:tint="#424242" />

        <ImageButton
            android:id="@+id/image_button_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_share_black_24dp"
            android:tint="#424242" />

    </LinearLayout>
</RelativeLayout>