<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vathsav.blink.activity.NewLogActivity">

    <EditText
        android:id="@+id/edit_text_new_log_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_title"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edit_text_new_log_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_text_new_log_title"
        android:hint="@string/hint_content" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignEnd="@+id/fab_publish_new_log"
        android:text="@string/hint_pick_color" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_publish_new_log"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:text="@string/hint_cover" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fab_publish_new_log"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/image_button_color_cyan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="@color/cardview_color_cyan" />

        <ImageButton
            android:id="@+id/image_button_color_red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="@color/cardview_color_red" />

        <ImageButton
            android:id="@+id/image_button_color_blue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="@color/cardview_color_blue" />

        <ImageButton
            android:id="@+id/image_button_color_yellow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="@color/cardview_color_yellow" />

        <ImageButton
            android:id="@+id/image_button_color_green"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="@color/cardview_color_green" />

        <ImageButton
            android:id="@+id/image_button_color_gray"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="@color/cardview_color_gray" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_publish_new_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:src="@drawable/ic_border_color_black_24dp"
        android:tint="#FFF"
        app:fabSize="normal"
        app:srcCompat="@color/colorAccent" />

</RelativeLayout>
