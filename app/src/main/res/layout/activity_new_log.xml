<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vathsav.blink.activity.NewLogActivity">


    <EditText
        android:id="@+id/edit_text_new_log_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Title"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edit_text_new_log_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_text_new_log_title"
        android:hint="Content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_publish_new_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:tint="#FFF"
        android:src="@drawable/ic_border_color_black_24dp"
        app:fabSize="normal"
        app:srcCompat="@color/colorAccent" />
</RelativeLayout>
