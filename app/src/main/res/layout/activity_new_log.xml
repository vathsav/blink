<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vathsav.blink.activity.NewLogActivity">

    <EditText
        android:id="@+id/edit_text_new_log_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_title"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edit_text_new_log_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_text_new_log_title"
        android:hint="@string/hint_content" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hint_pick_color" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_marginEnd="27dp"
        android:layout_toStartOf="@+id/button2"
        android:text="@string/hint_attachment" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_publish_new_log"
        android:layout_alignParentStart="true"
        android:weightSum="6">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="#00E5FF" />

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="#ff1744" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="#651FFF" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="#FFEA00" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="#76FF03" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lens_black_24dp"
            android:tint="#424242" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_publish_new_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:src="@drawable/ic_border_color_black_24dp"
        android:tint="#FFF"
        app:fabSize="normal"
        app:srcCompat="@color/colorAccent" />

</RelativeLayout>
